<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menubg" >

    <TextView
        android:id="@+id/drawtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    

    <Button
        android:id="@+id/boyfack"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/boyfreindakebutton" />

    <Button
        android:id="@+id/girlfrnd"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_above="@+id/boyfack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonfakegirlfreind" />

    <Button
        android:id="@+id/custimize"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_below="@+id/boyfack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/customizebutton" />

